{
  "name": "ai-translator",
  "description": "Chrome AI Translator extension.",
  "type": "module",
  "workspaces": [
    "chrome-extension",
    "packages/*",
    "pages/*"
  ],
  "scripts": {
    "build:bundle-utils": "bun --filter '@libs/bundle-utils' build",
    "prebuild": "WORKSPACE_ROOT=$(pwd) bun run build:bundle-utils && bun --filter '@libs/*' build",
    "build": "WORKSPACE_ROOT=$(pwd) bun --filter '@ai-translator/*' build",
    "postbuild": "bun scripts/zip.ts",
    "dev": "bun run build:bundle-utils && WORKSPACE_ROOT=$(pwd) bun --filter '!(./)' dev"
  },
  "author": "Plumbiu",
  "license": "MIT",
  "devDependencies": {
    "@libs/bundle-utils": "workspace:*",
    "@types/adm-zip": "0.5.7",
    "@types/bun": "^1.2.21",
    "@types/chrome": "latest",
    "@types/dom-chromium-ai": "0.0.9",
    "adm-zip": "0.5.16"
  }
}