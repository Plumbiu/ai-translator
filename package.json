{
  "name": "ai-translator",
  "author": "Plumbiu",
  "description": "Chrome AI Translator extension.",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "build": "WORKSPACE_ROOT=$(pwd) bun --filter '@ai-translator/*' build && bun run build:zip",
    "build:bundle-utils": "bun --filter '@libs/bundle-utils' build",
    "build:libs": "bun --filter '@libs/*' build",
    "build:mainfest": "bun ./scripts/build-manifest.ts",
    "build:zip": "bun ./scripts/zip.ts",
    "clear:dist": "find . -type d -name \"dist\" -not -path \"*/node_modules/*\" -exec rm -rf {} + 2>/dev/null || true",
    "dev": "WORKSPACE_ROOT=$(pwd) bun --filter '!(./)' dev",
    "lint": "biome check . --write",
    "prebuild": "bun run build:bundle-utils && bun run build:libs && bun run build:mainfest",
    "predev": "bun run build:bundle-utils && bun run build:mainfest",
    "prepare": "bun run build:mainfest"
  },
  "workspaces": [
    "chrome-extension",
    "packages/*",
    "pages/*"
  ],
  "devDependencies": {
    "@biomejs/biome": "2.2.3",
    "@libs/bundle-utils": "workspace:*",
    "@types/adm-zip": "0.5.7",
    "@types/bun": "^1.2.21",
    "@types/chrome": "latest",
    "@types/dom-chromium-ai": "0.0.9",
    "@types/minimist": "^1.2.5",
    "adm-zip": "0.5.16",
    "minimist": "^1.2.8",
    "picocolors": "^1.1.1",
    "postcss": "^8.5.6",
    "postcss-prefixwrap": "^1.57.0",
    "simple-git-hooks": "^2.13.1"
  },
  "lint-staged": {
    "*": [
      "bun lint"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
